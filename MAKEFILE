NAME = fractol
SRCS = events.c init.c main.c math_utils.c render.c string_utils.c
OBJS = $(SRCS:.c=.o)

CC = cc
CFLAGS = -Wall -Werror -Wextra -I.

LDLIBS = -Lminilibx-linux -lmlx_linux -lX11 -lXext

# gcc *.c -Lminilibx-linux -lmlx_Linux -lX11 -lXext -o fractol

all: $(NAME)

$(NAME): $(OBJS)
	$(CC) -o $@ $(OBJS) $(LDLIBS)

%.o: %.c fractol.h
	$(CC) $(CFLAGS) -c $< -o $@

clean:
	rm -f $(OBJS)

fclean: clean
	rm -f $(NAME)

re: fclean all

.PHONY: all clean fclean re
