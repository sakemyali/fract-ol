GREEN = \033[0;32m
RED = \033[0;31m
RESET = \033[0m

CC = cc
CFLAGS = -Wall -Werror -Wextra
MLX_PATH = /minilibx-linux

SRCS		= burning_ship.c \
			  draw.c \
			  init.c \
			  julia.c \
			  main.c \
			  mandelbrot.c \
			  mouse_and_key.c \
			  utils.c

OBJS		= $(SRCS:.c=.o)

MLX = $(MLX_PATH)/libmlx.a

NAME = fractol

all: $(NAME)

%.o: %.c
	$(CC) $(FLAGS) -c $< -o $@

$(NAME): $(OBJS) $(MLX)
	$(CC) $(CFLAGS) -o $@ $^ -lft -L$(MLX_PATH) -lmlx -framework OpenGL -framework AppKit

$(MLX):
	make -C $(MLX_PATH)

clean:
	rm -r $(OBJ_DIR)

fclean: clean
	rm -f $(NAME)

re: fclean all

.PHONY: all clean fclean re
