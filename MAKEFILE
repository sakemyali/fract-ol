# Simple Makefile for fract-ol (minimal, like the provided example)

NAME = fractol
SRCS = events.c init.c main.c math_utils.c render.c string_utils.c
OBJS = $(SRCS:.c=.o)

CC = cc
CFLAGS = -Wall -Werror -Wextra -I.

# Link against minilibx (adjust if your mlx requires extra flags)
LDLIBS = -Lminilibx-linux -lmlx -lm

all: $(NAME)

$(NAME): $(OBJS)
	$(CC) -o $@ $(OBJS) $(LDLIBS)

%.o: %.c fractol.h
	$(CC) $(CFLAGS) -c $< -o $@

clean:
	rm -f $(OBJS)

fclean: clean
	rm -f $(NAME)

re: fclean all

.PHONY: all clean fclean re
